<div class="row">
  <div class="col-md-4 mx-auto">
    <h2><%= t('profile') %></h2>
  </div>
</div>
<br>
<div class="row">
  <div class="col-md-4 mx-auto">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>    
    <div class="row form-group">
      <div class="col-md-5">
        <%= f.label :name, class: "hidden" %>
      </div>
      <div class="col-md-12">
        <div class="form-group">
          <label class="sr-only" for="email">Name</label>
          <div class="input-group mb-2 mr-sm-2 mb-sm-0">
            <div class="input-group-addon" style="width: 2.6rem"><i class="fa fa-user"></i></div>
            <%= f.text_field :name, class: "form-control", placeholder: "ユーザー名" %>
            <%=errors_for resource,:name%>
          </div>
        </div>
      </div>
    </div>

    <div class="row form-group">
      <div class="col-md-5">
        <%= f.label :email, class: "hidden" %>
      </div>
      <div class="col-md-12">
        <div class="form-group">
          <label class="sr-only" for="email">E-Mail Address</label>
          <div class="input-group mb-2 mr-sm-2 mb-sm-0">
            <div class="input-group-addon" style="width: 2.6rem"><i class="fa fa-at"></i></div>
            <%= f.email_field :email, readonly: true, class: "form-control", placeholder: "メール" %>
            <%=errors_for resource,:email%>
          </div>
        </div>
      </div>
    </div>

    <div class="row form-group">
      <div class="col-md-5">
        <%= f.label :avatar, class: "hidden"%>
      </div>

      <div class="col-md-8" id="show-avatar">
        <% if resource.avatar&&resource.avatar.present? %>
        <%=image_tag resource.avatar,width: "50%"%>     
        <% else %>
        <%= image_tag "fallback/default.jpg"%><br>
        <% end %>       
        <label for="user_avatar" class="fa fa-edit fa-3x"></label>
        <%= f.file_field :avatar,style: "display:none" %>
        <%=errors_for resource,:avatar%>        
      </div>
    </div>

    <div class="row form-group">
      <div class="col-md-5">
        <%= f.submit :class => 'btn btn-success' %>
      </div>
      <div class="col-md-12"></div>
    </div>
    <% end %>
  </div>
</div>