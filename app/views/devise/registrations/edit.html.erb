<div class="row">
  <div class="col-md-4 mx-auto">
    <h2><%= t('profile') %></h2>
  </div>
</div>
<br>
<div class="row">
  <div class="col-md-5 mx-auto">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>    
    <div class="row form-group">
      <div class="col-md-4">
        <%= f.label :name %>
      </div>
      <div class="col-md-8">
        <%= f.text_field :name,class: "form-control"  %>
        <%=errors_for resource,:name%>
      </div>
    </div>
    <div class="row form-group">
      <div class="col-md-4">
        <%= f.label :email %>        
      </div>
      <div class="col-md-8">
        <%= f.email_field :email,readonly: true,class: "form-control" %>
        <%=errors_for resource,:email%>
      </div>
    </div>
    <div class="row form-group">
      <div class="col-md-4">
        <%= f.label :avatar%>      
      </div>
      <div class="col-md-8">
        <label for="user_avatar">
          <% if resource.avatar&&resource.avatar.present? %>
            <%=image_tag resource.avatar,width: "100%"%>     
          <% else %>
            <%= image_tag "fallback/default.jpg"%><br>
          <% end %>
        </label>
        <%= f.file_field :avatar,style: "display:none" %>
        <%=errors_for resource,:avatar%>        
      </div>
    </div>
    <div class="row form-group">
      <div class="col-md-4 mx-auto">
        <%= f.submit%>
      </div>
    </div>
    <% end %>
  </div>
</div>