<div class="col-md-8 col-md-offset-2">
  <div class="row">
    <div class="col-md-4 mx-auto">
      <h2><%=t 'sign_up'%></h2>
    </div>
  </div>
  <br>
  <div class="row">
    <div class="col-md-4 mx-auto">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

          <div class="row form-group">
            <div class="col-md-5">
              <%= f.label :email, class: "hidden" %>
            </div>
            <div class="col-md-12">
              <div class="form-group">
                <label class="sr-only" for="email">E-Mail Address</label>
                <div class="input-group mb-2 mr-sm-2 mb-sm-0">
                  <div class="input-group-addon" style="width: 2.6rem"><i class="fa fa-at"></i></div>
                  <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "メール" %>
                  <%=errors_for resource,:email%>
                </div>
              </div>
            </div>
          </div>

          <div class="row form-group">
            <div class="col-md-5">
              <%= f.label :name, class: "hidden" %>
            </div>
            <div class="col-md-12">
              <div class="form-group">
                <label class="sr-only" for="email">Name</label>
                <div class="input-group mb-2 mr-sm-2 mb-sm-0">
                  <div class="input-group-addon" style="width: 2.6rem"><i class="fa fa-user"></i></div>
                  <%= f.text_field :name, class: "form-control", placeholder: "ユーザー名" %>
                  <%=errors_for resource,:name%>
                </div>
              </div>
            </div>
          </div>

          <div class="row form-group">
            <div class="col-md-5">
              <%= f.label :password, class: "hidden" %>
            </div>
            <div class="col-md-12">
              <div class="form-group">
                <label class="sr-only" for="password">Password</label>
                <div class="input-group mb-2 mr-sm-2 mb-sm-0">
                  <div class="input-group-addon" style="width: 2.6rem"><i class="fa fa-key"></i></div>
                  <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "パスワード" %>
                  <%=errors_for resource,:password%>
                </div>
              </div>
            </div>
          </div>

          <div class="row form-group">
            <div class="col-md-5">
              <%= f.label :password_confirmation, class: "hidden" %>
            </div>
            <div class="col-md-12">
              <div class="form-group">
                <label class="sr-only" for="password">Password Confirmation</label>
                <div class="input-group mb-2 mr-sm-2 mb-sm-0">
                  <div class="input-group-addon" style="width: 2.6rem"><i class="fa fa-check"></i></div>
                  <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "パスワード確認" %>
                  <%=errors_for resource,:password_confirmation%>
                </div>
              </div>
            </div>
          </div>

          <div class="row" style="padding-top: 1rem">
            <div class="col-md-5"></div>
            <div class="col-md-12">
              <%= f.submit t("sign_up"), :class => 'btn btn-success' %>
            </div>
          </div>

      <% end %>
    </div>
  </div>
</div>
