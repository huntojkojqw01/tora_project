<style>
  body{
    background:url('');
  }
</style>
<div class="col-md-8 col-md-offset-3">
  <div class="row ">
    <div class="col-md-4 mx-auto">
      <h2>
        <%=t "log_in"%>
      </h2>
    </div>
  </div>
  <br>
  <div class="row">
    <div class="col-md-4 mx-auto">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="row form-group">
          <div class="col-md-5">
            <%= f.label :email, class: "hidden" %>
          </div>
          <div class="col-md-12">
            <div class="form-group">
              <label class="sr-only" for="email">E-Mail Address</label>
              <div class="input-group mb-2 mr-sm-2 mb-sm-0">
                <div class="input-group-addon" style="width: 2.6rem">
                  <i class="fa fa-at"></i>
                </div>
                <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "メール" %>
              </div>
            </div>
          </div>
        </div>
  
        <div class="row form-group">
          <div class="col-md-5">
            <%= f.label :password, class: "hidden" %>
          </div>
          <div class="col-md-12">
            <div class="form-group">
              <label class="sr-only" for="password">Password</label>
              <div class="input-group mb-2 mr-sm-2 mb-sm-0">
                <div class="input-group-addon" style="width: 2.6rem">
                  <i class="fa fa-key"></i>
                </div>
                <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "パスワード" %>
              </div>
            </div>
          </div>
        </div>
  
        <% if devise_mapping.rememberable? -%>
          <div class="row form-group">
            <div class="col-md-1">
              <%= f.check_box :remember_me %>
            </div>
            <div class="col-md-10">
              <%= f.label :remember_me %>
            </div>
          </div>
          <% end -%>
            <div class="row form-group">
              <div class="col-md-5">
                <%= f.submit t("log_in"), :class => 'btn btn-success' %>
              </div>
              <div class="col-md-12"></div>
            </div>
            <% end %>
  
              <div class="row form-group">
                <div class="col-md-12">
                  <%= link_to t("sign_up"),new_user_registration_path%>
                </div>
                <div class="col-md-12"></div>
              </div>
  
              <div class="row form-group">
                <div class="col-md-12"></div>
                <div class="col-md-12">
                  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
                    <%= link_to t("forgotpassword"), new_password_path(resource_name) %>
                      <% end -%>
                </div>
              </div>
  
    </div>
  </div>
</div>
