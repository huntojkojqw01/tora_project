<% error_attributes=@kuchikomi.errors.keys%>
<% [:text].each do |attribute|%>
	$("form#new_kuchikomi #<%=attribute%>_feedback").empty()
	$("form#new_kuchikomi #kuchikomi_<%=attribute%>").removeClass('is-invalid')
	<% if error_attributes.include? attribute %>
		$("form#new_kuchikomi #kuchikomi_<%=attribute%>").addClass('is-invalid')		
		<% @kuchikomi.errors.full_messages_for(attribute).each do |msg| %>					
			$("form#new_kuchikomi #<%=attribute%>_feedback").append("<li><%=msg%></li>")
		<% end %>
	<% end %>				
<% end %>
