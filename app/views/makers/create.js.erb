help_block=$('tfoot .help-block')
<% if @maker.errors.any? %>
	help_block.empty()
	<% @maker.errors.full_messages.each do |message| %>
		help_block.append("<%=message%>")
	<% end %>	
<% else %>
	$("tbody").append("<%=j render @maker %>")	
	$("tfoot input#maker_name").val('')
	help_block.empty()
<% end %>